<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:background="@drawable/bg_color_xam"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/imgAnh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/tao">
            </ImageView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txvTenQua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Táo Mỹ"
                android:fontFamily="@font/a">
            </TextView>
            <TextView
                android:id="@+id/txvMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="3dp"
                android:textSize="14sp"
                android:textColor="@color/xam1"
                android:text="Táo Rất Ngon">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="18sp"
                    android:textColor="@color/xanh"
                    android:layout_gravity="bottom">
                </TextView>
                <TextView
                    android:id="@+id/txvGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.5"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="bottom"
                    android:textSize="16sp"
                    android:textColor="@color/xanh"
                    android:fontFamily="@font/a">
                </TextView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right">
                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/ChatLuong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:progressTint="@color/xanh"
                        android:secondaryProgressTint="@color/xanh"
                        style="@style/ratingbar"
                        android:numStars="5"
                        android:rating="3">
                    </me.zhanghai.android.materialratingbar.MaterialRatingBar>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
